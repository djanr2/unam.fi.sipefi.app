<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Se importa todo lo necesario de Python-Django -->
		{% load static %}
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta http-equiv="x-ua-compatible" content="IE=9">
		<title>SIPEFI</title>
		<link rel="shortcut icon" type="image/x-icon" href="{% static "imagenes/Bicon.ico" %}" />
		{% include "principal/estilos.html" %}
		{% include "principal/scripts.html" %}
		{% block extra_head %}{% endblock %}
	</head>
	<body>
		<nav class="navbar sticky-top navbar-light bg-light" id="encabezado">
			<img id="logoBanobras" src="{% static "imagenes/logoFI.png" %}" alt="BANOBRAS">
			<span class="navbar-text">
				<span class="tituloProyecto navbar-brand mb-0 h1">SIPEFI - TOMO II</span>
				<br>
				<span class="textInfTitulo">versi&oacute;n 1.0</span>
			</span>
		</nav>
		<div id="datosAcceso" class='rounded-bottom'>
			<div id="nomDireccion">
				<strong>
						Direcci&oacute;n General Adjunta de Administraci&oacute;n de Riesgos <br>
						Direcci&oacute;n de Metodolog&iacute;as de Riesgos
				</strong>
			</div>
			<div id="botonesBarraAccion">
				<a href= {{siar}} ><button type="button" class="btn btn-secondary SIAR">Regresar</button></a>
				<button target="regresarBusqSoli" type="button" class="menuBotones esconder btn btn-secondary">Regresar</button>
				<button target="regresarLlenaSoli" type="button" class="menuBotones esconder btn btn-secondary">Regresar</button>
				<button target="cargarSolicitud" type="button" class="menuBotones esconder btn btn-primary creaSolicitud">Continuar</button>
				<button target="cancelarRowAdd" type="button" class="menuBotones esconder btn btn-secondary">Cancelar</button>
				<button target="validarCampos" type="button" class="menuBotones esconder btn btn-warning letraBlanca">Validar campos</button>
				<button target="#modalComentarios" type="button" class="menuBotones esconder btn btn-info">Comentarios</button>
				<button target="guardarSolicitud" type="button" class="menuBotones esconder btn btn-danger">Guardar solicitud</button>
				<button target="validarRiesgo" type="button" class="menuBotones btn esconder btn-warning letraBlanca">Validar riesgo</button>
				<button target="rechazarSolicitud" type="button" class="menuBotones esconder btn btn-danger">Rechazar</button>
				<button target="aprobarSolicitud" type="button" class="menuBotones esconder btn btn-danger">Aprobar</button>
				<button target="guardaRegistroCE" type="button" class="menuBotones esconder btn btn-danger">Guardar cr&eacute;dito</button>
			</div>
			<div id="infoDer">
				<span><i class="fa-solid fa-user" style="color: black;"></i>
					  <span id="usuario">{{usuario}}</span>
					  <span id="usuarioSol" class="esconder"></span>
					  <span id="rol" class="esconder">{{rol}}</span>
					  <span id="token" class="esconder">{{token}}</span>
					  <span id="universo" class="esconder">{{universo}}</span>
				</span> 
				<span><span class="fas fa-calendar-days" style="color: black;"></span> {% now "j/m/Y" %}</span> 
				<span><strong>Hora:</strong> <span id="hora"> {% now "H:i:s" %}</span></span>
			</div>
		</div>
		<div id='cuerpoPrincipal'>
	        {% block content %}{% endblock %}
		</div>
		<script>
			$(document).ready(function(){
		 		solPF.inicio({{idsValidador}});
			});
		</script>
	</body>
</html>